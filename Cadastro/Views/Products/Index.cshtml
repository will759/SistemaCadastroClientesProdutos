@model IEnumerable<Cadastro.Domain.Entities.Product>

@{
    ViewData["Title"] = "Produtos";
}

<h1 class="mb-3">Produtos</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary">
        + Novo Produto
    </a>

    <span class="text-muted">
        Total de produtos: <strong>@Model.Count()</strong>
    </span>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Nome</th>
            <th>Valor</th>
            <th>Disponível</th>
            <th>Cliente</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted">
                    Nenhum produto encontrado.
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>R$ @item.Value</td>
                    <td>
                        @if (item.IsAvailable)
                        {
                            <span class="badge bg-success">Sim</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Não</span>
                        }
                    </td>
                    <td>@item.Client?.Name</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Deseja excluir este produto?')">
                           Excluir
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
