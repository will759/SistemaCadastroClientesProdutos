@model IEnumerable<Cadastro.ViewModels.ClientViewModel>

@{
    ViewData["Title"] = "Clientes";
}

<h1 class="mb-3">Clientes</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a asp-action="Create" class="btn btn-primary">
            + Novo Cliente
        </a>

            </div>

    <form method="get" class="d-flex">
        <input type="text"
               name="search"
               value="@Context.Request.Query["search"]"
               class="form-control me-2"
               placeholder="Buscar cliente..." />
        <button type="submit" class="btn btn-outline-secondary">
            Buscar
        </button>
    </form>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Email</th>
            <th>Ativo</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center text-muted">
                    Nenhum cliente encontrado.
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>
                        @if (item.Ative)
                        {
                            <span class="badge bg-success">Sim</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Não</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Deseja excluir este cliente?')">
                            Excluir
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>